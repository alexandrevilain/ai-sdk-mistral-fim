{
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2018"
    ],
    "module": "ESNext",
    "target": "ES2018",
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["@types/node", "vitest/globals"],
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "tsup.config.ts"
  ],
}